for (i in 7:12) {
  
  TEMP[i][TEMP[i] == ""] <- NA
  TEMP[,i] <- factor(TEMP[,i], levels = c("Extremely uncommon", "Fairly uncommon", "Neither common nor uncommon", "Fairly common", "Extremely common"))
  TEMP[,i] <- as.numeric(TEMP[,i])*-1
  TEMP[,i][is.na(TEMP[,i])] <- 0
  
