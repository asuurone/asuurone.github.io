  geom_text(stat='count', aes(label=..count..), vjust=-0.5, size = 3) +
  annotate("label", x = 5, y = 5, size = 2.5, alpha = 0.6, label = agreement, fill = "Green") +
  annotate("label", x = -6, y = 5, size = 2.5, alpha = 0.6, label = disagreement, fill = "Red") +
